#include <iostream>
#include <ctime>
using namespace std;

void in(int** mas, int& n) 
{
	for (int i = 0; i < n; i++) 
	{
		mas[i] = new int[n];
	}
}

void dab(int** mas, int& n) 
{
	for (int i = 0; i < n; i++) 
	{
		for (int j = 0; j < n; j++) 
		{
			mas[i][j] = rand() % 99;
		}
	}
	cout << endl;
}

void outmas(int** mas, int& n) 
{
	for (int i = 0; i < n; i++) 
	{
		for (int j = 0; j < n; j++) 
		{
			cout << mas[i][j] << '\t';
		}
		cout << endl;
	}
	cout << endl;
}

void shift(int** mas, int& n)
{
	int k;
	for (int i = 0; i < n; i++)
	{
		k = mas[i][n - 1];
		for (int j = n; j > 0; j--)
		{
			mas[i][j] = mas[i][j - 1];
		}
		mas[i][0] = k;
	}
	for (int i = 0; i < n; i++)
	{
		k = mas[0][i];
		for (int j = 0; j < n - 1; j++)
		{
			mas[j][i] = mas[j + 1][i];
		}
		mas[n - 1][i] = k;
	}
}

