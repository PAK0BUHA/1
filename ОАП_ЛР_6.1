#include "pch.h"
#include <iostream>
#include <ctime>

using namespace std;

int main()
{
	setlocale(LC_ALL, "rus");
	int *a, n, max, max_n;
	srand( time(0) );
	cout << "Введите размерность массива: ";
	cin >> n;
	max = 0;
	a = new int[n];
	for (int i = 0; i < n; i++)
	{
		a[i] = rand () % 100;
		cout << a[i] << endl;
	}
	cout << endl;
	for (int i = 0; i < n; i++)
	{
		if (a[i] > max)
		{
			max = a[i];
			max_n = i++;
		}
		else
		{
			max = max;
		}
	}
	cout << "Индекс максимального элемнета массива: [" << max_n << "]" << endl;
}
