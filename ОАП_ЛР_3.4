{
	setlocale(LC_ALL, "rus");
	double x, y, r;

	cout << "Введите X: ";
	cin >> x;
	cout << "Введите Y: ";
	cin >> y;
	r = 2;
	if (y == x * x - 2)
	{
		cout << "Точка лежит на параболе." << endl;
	}
	if (y != x * x - 2)
	{
		cout << "Точка не лежит на параболе." << endl;
