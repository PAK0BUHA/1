	{
		A[i] = rand() % 20 - 10;
		cout << A[i] << " ";
	}
}

void sortmas(int& n, int* A)
{
	int buf;
	for (int i = 0; i < n; i++)
	{
		if (A[i] > A[i + 1])
		{
			buf = A[i];
			A[i] = A[i + 1];
			A[i + 1] = buf;
			i = -1;
		}
	}
}

